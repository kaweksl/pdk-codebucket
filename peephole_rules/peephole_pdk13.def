//pdk13 don't have swapc
replace {
    mov	a, %1
	mov	p, a
	sl	p
	mov	a, __pa
	and	a, #0x01
	or	a, p
	mov	%1, a
} by {
    ; peephole SDA pulling optimization
    set0 __flag, #1  
    t0sn    __pa, #0
    set1 __flag, #1
    slc %1
}

//if(TimeoutCount & 0x400) {
replace {
	mov	a, _TimeoutCount+1
	mov	p, a
	mov	a, _TimeoutCount+0
	t1sn	p, #2
	goto	%1
} by {
    t1sn	_TimeoutCount+1, #2
    goto	%1
}