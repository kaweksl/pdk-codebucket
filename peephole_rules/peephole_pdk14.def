// Check if bit X is 1
// ex. if(PA0)
replace {
    mov a, %1
    and a, #0x01
    cneqsn a, #0x00
    goto %2
} by {
    ; peephole Check bit #0 is 1 optimization.
    t1sn	%1, #0
    goto	%2
}
