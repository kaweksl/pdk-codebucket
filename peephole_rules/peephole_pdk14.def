// *** SET_BITMASK optimization

replace {
	mov	a, %1
	or	a, #0x01
	mov	%1, a
} by {
    ; peephole SET_BITMASK optimization.
    set1 %1, #0
}
replace {
	mov	a, %1
	or	a, #0x02
	mov	%1, a
} by {
    ; peephole SET_BITMASK optimization.
    set1 %1, #1
}

replace {
	mov	a, %1
	or	a, #0x04
	mov	%1, a
} by {
    ; peephole SET_BITMASK optimization.
    set1 %1, #2
}
replace {
	mov	a, %1
	or	a, #0x08
	mov	%1, a
} by {
    ; peephole SET_BITMASK optimization.
    set1 %1, #3
}

// *** CLR_BITMASK optimization

replace {
	mov	a, #0xfd
	and	%1, a
} by {
    ; peephole CLR_BITMASK optimization.
    set0 %1, #0
}

//I2CData = (I2CData << 1) | (SDA);
replace {
    mov	a, %1
	mov	p, a
	sl	p
	mov	a, __pa
	and	a, #0x01
	or	a, p
	mov	%1, a
} by {
    swapc __pa, #0
    slc %1
}


